<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.slideshow.CambiocontraFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutCC"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fondoEditText"
        android:visibility="visible"
        tools:layout_editor_absoluteX="-206dp"
        tools:layout_editor_absoluteY="67dp">

        <TextView
            android:id="@+id/textViewCC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:text="Cambiar mi contrase単a"
            android:textColor="@color/textmenu"
            android:textSize="30dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayoutCC"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.312" />

        <LinearLayout
            android:id="@+id/linearLayoutCC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@color/white"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.271">


            <TextView
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:text="Ingrese la contrase単a actual y despues la nueva, al menos 8 caracteres."
                android:textColor="@color/black"
                android:textSize="20dp" />


            <EditText
                android:id="@+id/etxtIngresaContraseniaCamb"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:backgroundTint="@color/boton"
                android:hint="Contrase単a actual"
                android:textColor="@color/textmenu"
                android:textColorHint="@color/textmenu"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/etxtIngresaContraseniaCambNuev"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@color/boton"
                android:hint="Contrase単a nueva"
                android:textColor="@color/textmenu"
                android:textColorHint="@color/textmenu"
                android:textSize="25dp" />


        </LinearLayout>

        <Button
            android:id="@+id/btnContraG"
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/boton"
            android:text="Guardar"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutCC"
            app:layout_constraintVertical_bias="0.217" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>