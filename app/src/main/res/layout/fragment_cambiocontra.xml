<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.slideshow.SlideshowFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fondoEditText"
        tools:layout_editor_absoluteX="-206dp"
        tools:layout_editor_absoluteY="67dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:text="Mi perfil"
            android:textColor="@color/textmenu"
            android:textSize="30dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:background="@color/white"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:layout_width="261dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:text="Usuario"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <EditText
                android:id="@+id/etxtIngresaUsuarioPer"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:backgroundTint="@color/boton"
                android:hint="Mi usuario"
                android:textColor="@color/textmenu"
                android:textColorHint="@color/textmenu"
                android:textSize="25dp" />


            <TextView
                android:layout_width="261dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:text="Telefono"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <EditText
                android:id="@+id/etxtIngresaTelefonoPer"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:backgroundTint="@color/boton"
                android:hint="7771234567"
                android:textColor="@color/textmenu"
                android:textColorHint="@color/textmenu"
                android:textSize="25dp" />

            <TextView
                android:layout_width="261dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:text="Correo Electronico"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <EditText
                android:id="@+id/etxtIngresaCorreoPer"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:backgroundTint="@color/boton"
                android:hint="miusuario@gmail.com"
                android:textColor="@color/textmenu"
                android:textColorHint="@color/textmenu"
                android:textSize="25dp" />

            <TextView
                android:layout_width="261dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:text="Cambiar mi contraseÃ±a"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etxtIngresaContraseniaPer"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="30dp"
                    android:backgroundTint="@color/boton"
                    android:hint="********"
                    android:textColor="@color/textmenu"
                    android:textColorHint="@color/textmenu"
                    android:textSize="25dp" />

                <ImageView
                    android:id="@+id/btnCambiocontra"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginRight="30dp"
                    android:src="@mipmap/ic_next" />
            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/btnPerfilG"
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/boton"
            android:text="Guardar"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentCambiocontra"
            android:name="com.pds.chambitas.ui.slideshow.CambiocontraFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:layout_editor_absoluteY="50dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>